{
  "training": {
    "num_episodes": 50000,
    "eval_interval": 100,
    "eval_episodes": 10,
    "log_interval": 100,
    "device": "cuda",
    "num_workers": 20,
    "reset_schedule_interval": 500
  },

  "muse": {
    "K": 5,
    "alphas": [0.2, 1, 0, -1, 0],
    "betas":  [0.8, 0, 1, 0, -1],

    "hidden_dim": 64,
    "batch_size": 512,
    "update_epochs": 4,
    "gamma": 0.99,
    "lam": 0.95,
    "clip_param": 0.3,
    "value_loss_coef": 0.5,
    "entropy_coef": 0.01,
    "initial_lr": 3e-4,
    "max_grad_norm": 0.5,
    "return_normalization": true,
    "advantage_normalization": true,
    "lambda_div": 0.0
  },

  "hitac": {
    "local_kpi_dim": 8,
    "global_kpi_dim": 3,
    "policies_info_dim": 8,

    "hidden_dim": 64,
    "n_heads": 4,
    "transformer_layers": 2,
    "kpi_window_size": 50,
    "update_epochs": 10,

    "clip_param": 0.2,
    "entropy_coef": 0.05,
    "gamma": 1.0,
    "initial_lr": 3e-4,
    "max_grad_norm": 0.5,
    "ucb_lambda": 0.2,
    "sticky_prob": 0.1,
    "lr": 3e-4,
    "temperature": 0.5,
    "epsilon": 0.0,
    "greedy_prob": 0.5
  },

  "distill": {
    "hidden_dim": 64,
    "loss_type": "kl",
    "neg_policy": true,
    "warmup_ep": 50,
    "batch_size": 512,
    "min_reward_ratio": 0.6,
    "bc_steps": 50,
    "sup_coef": 1.0,
    "neg_coef": 0.5,
    "margin": 3.0
  },

  "scheduler": {
    "switch_interval": 50,
    "hitac_update_interval": 1,
    "distill_interval": 10,
    "neg_interval": 50
  }
}
